# =============================================================================
# CI PLATFORM SELECTION
# =============================================================================
# Choose which CI platform to use: 'github' or 'gitlab'
# IMPORTANT: Only one platform can be active at a time
# Running both simultaneously is not supported
# Note: Using RUNNER_PLATFORM instead of RUNNER_PLATFORM to avoid conflicts with
# GitLab CI predefined variables (CI_ prefix is reserved)
RUNNER_PLATFORM=github

# Unique container name (change this if you clone the repository multiple times)
# This prevents container name conflicts when running multiple instances
CONTAINER_NAME=baremetal-ci-runner-1

# =============================================================================
# GITHUB ACTIONS CONFIGURATION (when RUNNER_PLATFORM=github)
# =============================================================================
GITHUB_TOKEN=
GITHUB_OWNER=
GITHUB_REPOSITORY=
RUNNER_NAME=baremetal-ci-runner
RUNNER_LABELS=baremetal,jlink,mcu
RUNNER_GROUP=default

# =============================================================================
# GITLAB CI CONFIGURATION (when RUNNER_PLATFORM=gitlab)
# =============================================================================
GITLAB_URL=https://gitlab.com
# Authentication token (glrt-*) obtained from GitLab UI:
# Settings -> CI/CD -> Runners -> New project runner
# Note: Runner name, tags, and other settings are configured in GitLab UI,
# not via environment variables (authentication tokens ignore these parameters)
GITLAB_REGISTRATION_TOKEN=
RUNNER_EXECUTOR=shell

# =============================================================================
# COMMON CONFIGURATION
# =============================================================================
# Enable Segger J-Link software and tools installation (true/false)
# Set to 'true' only if you need J-Link programmer support
ENABLE_JLINK=false

# Enable PEAK CAN support via SocketCAN (true/false)
# Set to 'true' only if you need CAN bus testing with PEAK CAN devices
ENABLE_PEAKCAN=false

# PEAK CAN baudrate for SocketCAN interface (default: 125000 = 125 kbit/s)
# Common values: 125000, 250000, 500000, 1000000
# To configure CAN interface inside the container or in CI jobs, use commands like:
#       `$ sudo ip link set can0 down`
#       `$ sudo ip link set can0 type can bitrate <BAUDRATE>`
#       `$ sudo ip link set can0 up`
# Only used when ENABLE_PEAKCAN=true
PCAN_BAUDRATE=125000

# Additional packages to install during build (space-separated list)
ADDITIONAL_PACKAGES=cmake gcc-arm-none-eabi python3 python3-pip python3-venv
